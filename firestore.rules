rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow clients to create, read, and delete documents in the 'lessons' collection.
    // We will disallow updates to prevent tampering with past lessons.
    match /lessons/{lessonId} {
      allow read, create, delete: if true;
      allow update: if false;
    }
  }
}
