rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default for security
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow reading and creating documents in the 'lessons' collection,
    // but do not allow updates or deletes.
    match /lessons/{lessonId} {
      allow read, create: if true;
      allow update, delete: if false;
    }
  }
}
