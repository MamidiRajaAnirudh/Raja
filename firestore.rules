rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read any document in any collection for simplicity.
    // For a production app, you'd want to restrict this further.
    match /{document=**} {
      allow read: if true;
    }

    // Allow anyone to create a document in the 'lessons' collection.
    // This is required for the app to save new lessons.
    match /lessons/{lessonId} {
      allow create: if true;
      // Explicitly deny updates or deletes on existing lessons to protect data.
      allow update, delete: if false;
    }
  }
}
