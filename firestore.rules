
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access to prevent unauthorized reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow clients to create, read, and delete documents in the 'lessons' collection.
    // Disallow updates to prevent modification of existing content.
    match /lessons/{lessonId} {
      allow read, create, delete: if true;
      allow update: if false;
    }
  }
}
